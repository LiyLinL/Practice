<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:cd="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Dialog id="settingDialog"
		showHeader="true"
		contentHeight="50%"
		contentWidth="65%"
		class="sapUiSizeCompact">
		<html:style>
		.borderBottom {
			border-bottom: solid #BEBEBE;
			padding-bottom: 15px;
		}
		</html:style>
		<customHeader>
			<Bar class="title-midle">
				<contentMiddle>
					<Title text="{i18n>kanban.label13}"/>
				</contentMiddle>
			</Bar>
		</customHeader>
		<content>
			<VBox class="sapUiSmallMarginTop borderBottom">
				<FlexBox class="sapUiTinyMarginBottom"
					alignItems="Center"
					renderType="Div">
					<!-- 生產點 -->
					<Label class="myLabel"
						vAlign="Middle"
						textAlign="Right"
						width="8rem"
						required="true"
						text="{i18n>g.site}" />
					<Label vAlign="Middle"
						text="{/site}"/>
				</FlexBox>
				<FlexBox class="sapUiTinyMarginBottom"
					alignItems="Center"
					renderType="Div">
					<!-- 計畫產出 -->
					<Label class="myLabel"
						vAlign="Middle"
						textAlign="Right"
						width="8rem"
						required="true"
						text="{i18n>kanban.label14}" />
					<Input width="115%"
						value="{/planQty}" />
				</FlexBox>
				<FlexBox class="sapUiTinyMarginBottom"
					alignItems="Center"
					renderType="Div">
					<!-- 物料編號 -->
					<Label class="myLabel"
						vAlign="Middle"
						textAlign="Right"
						width="8rem"
						required="true"
						text="{i18n>kanban.label1}"/>
					<Input width="100%"
						showValueHelp="true"
						valueHelpRequest="itemDialog"
						cd:title="title"
						cd:filterKey="item"
						cd:callBackKey="item"
						cd:columns="item|kanban.label1;description|kanban.label2;prodType|kanban.label21"
						cd:root="/"
						value="{/setItem}" />
					<!-- 物料說明 -->
					<Label class="myLabel sapUiLargeMarginBegin"
						text="{i18n>kanban.label2}"
						vAlign="Middle"
						textAlign="Right"/>
					<Label vAlign="Middle"
						text="{/setItemDesc}"/>
				</FlexBox>
				<!-- 現場訂單 -->
				<FlexBox class="sapUiTinyMarginBottom"
					alignItems="Center"
					renderType="Div">
					<Label class="myLabel"
						vAlign="Middle"
						textAlign="Right"
						width="8rem"
						text="{i18n>kanban.label15}"/>
					<Input width="100%"
						showValueHelp="true"
						valueHelpRequest="openWindowOne"
						value="{/setSo}" />
				</FlexBox>
			</VBox>
			<VBox class="sapUiSmallMarginTop">
				<FlexBox alignItems="Center"
					alignContent="End"
					renderType="Div">
					<!-- 自動 -->
					<RadioButton id="auto"
						text="{i18n>kanban.label16}"
						groupName="set"
						selected="true"
						select="isAuto"
						class="sapUiLargeMarginBegin"></RadioButton>
					<!-- 刷新頻率 -->
					<Label class="myLabel sapUiLargeMarginBegin"
						vAlign="Middle"
						textAlign="Right"
						width="21.5rem"
						text="{i18n>kanban.label18}"/>
					<Input value="{/setRefreshFreq}" />
				</FlexBox>
				<FlexBox alignItems="Center"
					alignContent="End"
					renderType="Div">
					<!-- 手動 -->
					<RadioButton id="manual"
						text="{i18n>kanban.label17}"
						groupName="set"
						class="sapUiLargeMarginBegin"></RadioButton>
				</FlexBox>
			</VBox>
		</content>
		<buttons>
			<Button text="{i18n>kanban.label19}"
				press="start" />
			<Button text="{i18n>kanban.label20}"
				press="stop" />
		</buttons>
	</Dialog>
</core:FragmentDefinition>