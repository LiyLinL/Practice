<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC
        "-//mybatis.org//DTD MyBatis Generator Configuration
        1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd"
        >
<generatorConfiguration>
    <properties resource="config/generatorConfig.properties"/>
    <!-- 配置数据源和生成的代码所存放的位置 -->
    <context id="context">
        <!-- 指定生成的java文件的编码,没有直接生成到项目时中文可能会乱码 -->
        <property name="javaFileEncoding" value="UTF-8"/>
        <!-- 使用自定义的插件 -->
        <commentGenerator>
            <property name="suppressDate" value="true"/>
            <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>
        <!-- jdbc -->
        <jdbcConnection driverClass="${generatorConfig.driverClass}"
                        connectionURL="${generatorConfig.connectionURL}" userId="${generatorConfig.user}"
                        password="${generatorConfig.passwd}">
            <!-- 针对oracle数据库 之前实体类中文注释是问号 加上这个就好了 -->
            <property name="remarksReporting" value="true"></property>
            <!--支持mybatis获取注释-->
            <property name="useInformationSchema" value="true"/>
        </jdbcConnection>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!-- dto class -->
        <javaModelGenerator targetPackage="${generatorConfig.entity}"
                            targetProject="src/main/java">
        </javaModelGenerator>

        <!-- mybatis xml file -->
        <sqlMapGenerator targetPackage="mapper"
                         targetProject="src/main/resources">
        </sqlMapGenerator>

        <!-- mapper class -->
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="${generatorConfig.mapper}" targetProject="src/main/java">
        </javaClientGenerator>


        <!--不生成帮助类（Exmaples） -->
        <!-- enableCountByExample="false" enableUpdateByExample="false" enableDeleteByExample="false"
            enableSelectByExample="false" selectByExampleQueryId="false" -->
        <!--已生成的表 <table schema="demo" tableName="USER" domainObjectName="User"></table> -->
        <table tableName="${generatorConfig.table}" schema="${generatorConfig.schema}"
               domainObjectName="${generatorConfig.domainObjectName}"
               enableUpdateByExample="false" enableDeleteByExample="false"
               selectByExampleQueryId="false" enableInsert="false"
               enableCountByExample="false">
            <property name="modelOnly" value="false"/>
        </table>
    </context>
</generatorConfiguration>